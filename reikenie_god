function onKeyPress(inputObject, gameProcessedEvent)
		if not gameProcessedEvent then
			if inputObject.KeyCode == Enum.KeyCode.P  then 
			local lp = game:GetService("Players").LocalPlayer
local bp = lp.Backpack
local char = lp.Character


--[[
local args = {
    [1] = "AK"
}

game:GetService("ReplicatedStorage").BuyGun:FireServer(unpack(args))

--]]

bp.AK.Parent = char

local v = game.Players.LocalPlayer

local args = {
    [1] = v.Character:FindFirstChild("HumanoidRootPart"),
    [2] = v.Character:FindFirstChild("HumanoidRootPart").Position + Vector3.new(0, 0, 0.5),
    [3] = v.Character:FindFirstChild("HumanoidRootPart").Position + Vector3.new(0, -10000, 0),
    [4] = BrickColor.new(26),
    [5] = -math.huge
}

lp.Character.AK.BulletRaycast:FireServer(unpack(args))


char.AK.Parent = bp
			end
		end
	end
	game:GetService("UserInputService").InputBegan:connect(onKeyPress)
